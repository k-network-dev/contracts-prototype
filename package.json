    "chai": "^4.2.0",
    "dotenv": "^16.0.2",
    "ethers": "^5.7.0",
    "hardhat": "^2.10.2",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "^2.7.1",
