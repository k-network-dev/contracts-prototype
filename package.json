{
  "name": "xswap-contracts-v2",
  "description": "xSwap Smart Contracts (v2)",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "h": "hardhat",
    "he": "hardhat --network ethereum",
    "hb": "hardhat --network binance",
    "hf": "hardhat --network fantom",
    "hp": "hardhat --network polygon",
    "ho": "hardhat --network optimism",
    "hv": "hardhat --network avalanche",
    "hr": "hardhat --network arbitrum",
    "hg": "hardhat --network gnosis",
    "het": "hardhat --network ethereumTest",
    "hbt": "hardhat --network binanceTest",
    "hpt": "hardhat --network polygonTest",
    "build": "hardhat compile",
    "b": "yarn build",
    "lint": "solhint contracts/*.sol",
    "l": "yarn lint",
    "prettify": "prettier --write contracts",
    "p": "yarn prettify",
    "test": "hardhat test",
    "t": "yarn test",
    "tg": "yarn test --grep",
    "coverage": "hardhat coverage",
    "c": "yarn coverage"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.0",
